<%= form_for @cafe do |f| %>
<div class="form-group">
    <%= f.label :name, 'Shop Name' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Brew-tiful" %>
</div>
<div class="form-group">
    <%= f.label :hours, 'Hours of Operation' %>
    <%= f.text_field :hours, class: 'form-control', placeholder: "M-F 7am-6pm" %>
</div>
<div class="form-group">
    <%= f.label :address, 'Address' %>
    <%= f.text_field :address, class: 'form-control', placeholder: "123 Coffee St, Los Angeles, CA 12345" %>
</div>
<div class="form-group">
    <%= f.label :phone, 'Phone Number' %>
    <%= f.text_field :phone, class: 'form-control', placeholder: "123-456-7890" %>    
</div>

<%= f.submit 'Suggest Shop', class: 'btn btn-primary' %>
<% end %>